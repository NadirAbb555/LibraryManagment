
@{
    ViewBag.Title = "Confirm";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<br />
<br />
<div class="alert alert-warning" id="previous">
    <strong>Hesabinizi testiqleyin</strong>
    <input type="submit" class="btn btn-warning" value="Testiqle" onclick="Verified()" />
</div>
<div class="alert alert-success" id="after" style="display:none">
    <strong><span class="gliphicon glyphicon-ok"></span>Mail adresinizi testiqleyin</strong>
</div>
<script>
    function Verified() {
        $.ajax({
            type: "post",
            url: "/Register/RegisterConfirm",
            data: { 'regId': '@ViewBag.regID' },
            success: function (msg) {
                $("#previous").hide();
                $("#after").show();
                alert(msg);

            }
        })
    }
</script>

