@model List<TBLWRITER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script type="text/javascript">
        (function titleScroller(text) {
            document.title = text;
            setTimeout(function () {
                titleScroller(text.substr(1) + text.substr(0, 1));
            }, 500);
        }(" Writers"));
    </script>
    <title id="titleScroller">


    </title>
</head>
<h2 style="margin-top:10px">Writers</h2>
<br />
<div style="border:medium">

    <table id="tbl1" class="table table-bordered">
        <thead>
            <tr>
                <th style="font-size:20px">#</th>
                <th style="font-size:20px">Name</th>
                <th style="font-size:20px">Surname</th>
                <th style="font-size:20px">Update</th>
                <th style="font-size:20px">Delete</th>
            </tr>
        </thead>
        @foreach (var x in Model)
        {
            <tr>
                <td><b style="font-size:15px">@x.ID</b></td>
                <td><b style="font-size:15px">@x.NAME</b></td>
                <td><b style="font-size:15px">@x.SURNAME</b></td>
                <td><a href="/Writer/ChangeWriter/@x.ID" class="btn btn-success">Update</a></td>
                <td>@Html.ActionLink("Delete", "DeleteWriter", new { id = x.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Do you want to delete?')" })</td>
                <td><a href="/Book/WritersBook/@x.ID" class="btn btn-default" style="background-color:white; color:black">Writers book</a></td>
            </tr>
        }
    </table>


    @*@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))*@

    <a href="/Writer/AddWriter" class="btn bg-primary">Add writer</a>
</div>
